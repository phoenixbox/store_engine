
<div class="container">
<%= image_tag "product-detail2.png" %>
</div>
<div class="container well">
  <% if logged_in? %>
    <% if current_user.admin %>
    <%= link_to "Switch to Admin View", dashboard_product_path(@product), class:"btn btn-danger btn-block" %>
    <% end %>
  <% end %>
  <div class="container" id="product-show-top">
    <div class="pull-right" id="product-details-top">
      <p><h2 id="product-title-show"><%= @product.title %></h2></p>
    
    <div class="pull-left">
      <%= link_to "Add to Cart", cart_path(increase:1, id:@product.id), :method => "put", class:'btn btn-danger' %>
    </div>
      
      <% if @product.discount? %>
      <p class="lead muted" style="text-decoration:line-through"><%= number_to_currency(@product.price/100.00) %></p>
      <p class="lead text-error">On Sale Now! <strong><%= number_to_currency(@product.discounted_price/100.0)%></strong></p>
      <% else %>
      <p class="lead"><strong>$<%= @product.price / 100.00 %></strong></p>
      <% end %>
    
      <ul id="product-bullets">
        <li class="lead"><%= @product.bullet1 %></li>
        <li class="lead"><%= @product.bullet2 %></li>
        <li class="lead"><%= @product.bullet3 %></li>
        <li class="lead"><%= @product.bullet4 %></li>
      </ul>
    </div>
    <div class="pull-left" id="product-img-box">
      <p class="lead"><%= image_tag( @product.photo_url ) %></p>
    </div>
  </div>
  <div>
    <p class="lead" id="long-description"><%= @product.long_description %></p>
  </div>
  <div class="pull-left" style="margin-left: 15px">Categories:
    <% @product.categories.each do |cat| %>
      <%= link_to cat.name, category_path(cat) %>
    <% end %>
  </div>
</div>
