<div class="">

  <h1><%= @product.title %></h1>

  <p class="lead"><%= @product.description %></p>
  <p class="lead">$<%= @product.price / 100.00 %></p>
  <p>
    Categories:
    <% @product.categories.each do |cat| %>
      <%= link_to cat.name, category_path(cat) %>
    <% end %>
  </p>
  <%= link_to "Add to Cart", "#{cart_path}?increase=1&id=#{@product.id}", :method => "put", class:'button' %>

  <%= link_to("Edit Product", edit_product_path, class:'button') %>
  <%= link_to("Destroy", product_path(@product), method: 'delete', class:'button') %>

</div>
