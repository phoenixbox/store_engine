      <%= link_to product.title[0..20], product_path(product), :class => "disabled", :style=>'color:#FFFFFF' %>
    </span>
  <%= link_to image_tag(product.photo_url, :size => "240x220"), product_path(product), :class => "disabled" %>
  </div>
  <% end %>

</div>

<div id="lander_middle_marketing">
