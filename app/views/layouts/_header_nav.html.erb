<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="nav-collapse collapse">
      <div class="container">
        <!-- ************** First ***************** -->
        <div id="logo">
        <%= logo %>
        </div>
        <!-- ************** Second ***************** -->
        <div id="nav-menu-items">
          <ul class="nav pull-right">
            <li><%# link_to "Products", products_path %></li>
            <li><%= link_to "Categories", categories_path %></li>
            <%= render partial: 'layouts/cart' %>
            <% if logged_in? %>
              <%if current_user.admin == true %>
                 <li><%= link_to "Dashboard", dashboard_root_path %></li>
              <% end %>
                <li><%= link_to "#{current_user.username.capitalize}'s Account", orders_path %></li>
                <li><%= link_to "Logout", logout_path %></li>
            <% else %>
                <li><%= link_to "Login", login_path %></li>
                <li><%= link_to "Sign Up", new_user_path %></li>
            <% end %>
          </ul>
        </div>
        <!-- ************** Center ***************** -->

          <form id="search-bar" method="get" action="/products" >
          <input id="speech-input-field" autocomplete="off" placeholder="i'm looking for..." name="q" type="text" data-provide="typeahead" data-source="<%= @search_terms %>" x-webkit-speech onwebkitspeechchange="onChange()"/>
          <button class="btn btn-danger" id="submitbutton" type="submit" name="Search">Search</button>
   
        </form>
      </div>
    </div><!--/.nav-collapse -->
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    function onChange() {
        trigger('click');
    }
</script>
