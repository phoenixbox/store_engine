<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="nav-collapse collapse">
      <%= logo %>
      <div class="pull-left" style="text-align:center">
        <form method="get" action="/products" >
        <input id="speech-input-field" placeholder="i'm looking for..." name="q" type="text" x-webkit-speech/>
        <input class="btn btn-danger" type="submit"/>
        </form>
      </div>
      <ul class="nav">
        <li><%# link_to "Products", products_path %></li>
        <li><%= link_to "Categories", categories_path %></li>
        <%= render partial: 'layouts/cart' %>
        <% if logged_in? %>
          <%if current_user.admin == true %>
             <li><%= link_to "Dashboard", dashboard_root_path %></li>
          <% end %>
            <li><%= link_to "#{current_user.username.capitalize}'s Account", orders_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
        <% else %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->

  </div>
</div>
